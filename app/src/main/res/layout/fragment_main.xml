<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment"
    >

  <EditText
      android:id="@+id/user_name"
      android:hint="@string/user_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      />

  <TextView
      android:textStyle="bold"
      android:textSize="18sp"
      android:gravity="center"
      android:text="@string/user_dob"
      android:id="@+id/date_of_birth_label"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_alignTop="@+id/date_of_birth"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      />

  <TextView
      android:padding="5dp"
      style="@style/Widget.AppCompat.Spinner"
      android:layout_toRightOf="@+id/date_of_birth_label"
      android:layout_toEndOf="@id/date_of_birth_label"
      android:gravity="center"
      android:layout_below="@+id/user_name"
      android:id="@+id/date_of_birth"
      android:hint="1945-06-19"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      />

  <android.support.percent.PercentRelativeLayout
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:layout_below="@+id/date_of_birth"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:id="@+id/view"
      >

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="၁၂"
        android:maxLength="3"
        android:id="@+id/nrc_no"
        app:layout_widthPercent="20%"
        android:layout_below="@+id/imageView"
        />

    <EditText
        android:layout_toEndOf="@id/nrc_no"
        android:layout_toRightOf="@id/nrc_no"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="ဗဟန"
        android:id="@+id/nrc_township"
        android:text="ဗဟန"
        app:layout_widthPercent="30%"
        android:layout_below="@+id/imageView"
        />

    <EditText
        android:hint="၁၀၉၄၅၈"
        android:layout_toEndOf="@+id/nrc_township"
        android:layout_toRightOf="@+id/nrc_township"
        app:layout_widthPercent="50%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

  </android.support.percent.PercentRelativeLayout>


  <GridView
      android:gravity="center"
      android:layout_centerHorizontal="true"
      android:verticalSpacing="4dp"
      android:layout_below="@+id/view"
      android:id="@+id/avatars"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:choiceMode="singleChoice"
      android:cropToPadding="true"
      android:listSelector="@android:color/transparent"
      />


</RelativeLayout>
