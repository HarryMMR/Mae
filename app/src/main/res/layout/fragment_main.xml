<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  <EditText
      android:id="@+id/user_name"
      android:hint="@string/user_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:maxLines="1"
      />

  <TextView
      android:textStyle="bold"
      android:textSize="18sp"
      android:gravity="center"
      android:text="@string/user_dob"
      android:id="@+id/date_of_birth_label"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_alignTop="@+id/date_of_birth"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      />

  <TextView
      android:padding="5dp"
      style="@style/Widget.AppCompat.Spinner"
      android:layout_toRightOf="@+id/date_of_birth_label"
      android:layout_toEndOf="@id/date_of_birth_label"
      android:gravity="center"
      android:layout_below="@+id/user_name"
      android:id="@+id/date_of_birth"
      android:hint="1945-06-19"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:maxLines="1"
      />



    <android.support.percent.PercentRelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/date_of_birth"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/view"
        >

      <EditText
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:hint="၁၂"
          android:maxLength="3"
          android:id="@+id/nrc_no"
          app:layout_widthPercent="20%"
          android:layout_below="@+id/imageView"
          />

      <EditText
          android:layout_toEndOf="@id/nrc_no"
          android:layout_toRightOf="@id/nrc_no"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:hint="ဗဟန"
          android:id="@+id/nrc_township"
          android:text="ဗဟန"
          app:layout_widthPercent="30%"
          android:layout_below="@+id/imageView"
          />

      <EditText
          android:hint="၁၀၉၄၅၈"
          android:layout_toEndOf="@+id/nrc_township"
          android:layout_toRightOf="@+id/nrc_township"
          app:layout_widthPercent="50%"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />

    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:padding="5dp"
        android:id="@+id/avatar_title"
        android:layout_below="@+id/view"
        android:text="@string/choose_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        />

    <GridView
        android:horizontalSpacing="4dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:verticalSpacing="4dp"
        android:layout_below="@+id/avatar_title"
        android:id="@+id/avatars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:cropToPadding="true"
        android:listSelector="@android:color/transparent"
        />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/post_fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@android:drawable/ic_input_add"
      android:layout_margin="16dp"
      android:clickable="true"
      app:layout_anchor="@id/avatars"
      app:layout_anchorGravity="bottom|right|end"
      app:pressedTranslationZ="16dp"
      app:borderWidth="0dp"
      app:elevation="8dp"
      app:rippleColor="@color/primary_dark"
      />
</RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
