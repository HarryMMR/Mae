<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.mmaug.mae.fragments.SignupFragment"
    android:background="@color/primary">
  <LinearLayout
    android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="center">
    <ImageView
        android:id="@+id/tick_mark_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_line"
        android:layout_margin="@dimen/spacing_major"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/check_voter_tv"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white"
        android:padding="@dimen/spacing_minor"
        android:gravity="center"
        android:textStyle="bold"
        android:lineSpacingMultiplier="1.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tick_mark_iv"
        android:text="@string/check_voter"/>
    <android.support.v7.widget.CardView
        android:id="@+id/register_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_massive"
        android:layout_marginRight="@dimen/spacing_massive"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginBottom="@dimen/spacing_minor"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/check_voter_tv"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/spacing_major">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_major"
                android:background="@null"
                android:hint="ြမို့နယ်"/>
            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/mdtp_light_gray"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_major"
                android:background="@null"
                android:hint="မိမိနာမည်"/>
            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/mdtp_light_gray"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_major"
                android:background="@null"
                android:hint="အဘနာမည်"/>
            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/mdtp_light_gray"/>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/spacing_major"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/spacing_major"
                    android:background="@null"
                    android:hint="၁၂"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/spacing_major"
                    android:paddingBottom="@dimen/spacing_major"
                    android:background="@null"
                    android:hint="ဗဟသ(နိုင်)"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:lines="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/spacing_major"
                    android:paddingBottom="@dimen/spacing_major"
                    android:background="@null"
                    android:hint="၂၀၈၅၇၃"/>
            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/mdtp_light_gray"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_major"
                android:background="@null"
                android:hint="မွေးနေ့"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/sign_up_card"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_card"
        app:cardBackgroundColor="@color/accent_color"
        app:cardUseCompatPadding="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="@dimen/spacing_minor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
        android:text="စစ်မယ်"
        android:gravity="center"
        android:padding="@dimen/spacing_not_so_major"
        android:layout_centerHorizontal="true"/>
    </android.support.v7.widget.CardView>
  </LinearLayout>
</ScrollView>
