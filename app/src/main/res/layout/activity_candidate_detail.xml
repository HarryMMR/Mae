<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <android.support.design.widget.AppBarLayout
      android:id="@+id/appbar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/appbarlayout_height"
      android:fitsSystemWindows="true"
      >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >

        <org.mmaug.mae.view.ZoomAspectRatioImageView
            android:id="@+id/backdrop"
            android:src="@drawable/flag"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            android:fitsSystemWindows="true"
            />

      </RelativeLayout>

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?android:attr/actionBarSize"
          app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
          app:elevation="@dimen/toolbar_elevation"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          android:minHeight="?android:attr/actionBarSize"
          app:layout_collapseMode="pin"
          />

      <org.mmaug.mae.view.CollapsingAvatarToolbar
          android:id="@+id/stuff_container"
          android:layout_width="wrap_content"
          android:layout_height="?attr/actionBarSize"
          >

        <ImageView
            android:id="@+id/candidate_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile_placeholder"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            >

          <TextView
              android:id="@+id/candidate_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="sans-serif-medium"
              android:text="Title"
              android:textColor="@android:color/white"
              android:textSize="18dp"
              />

        </LinearLayout>
      </org.mmaug.mae.view.CollapsingAvatarToolbar>

    </android.support.design.widget.CollapsingToolbarLayout>
  </android.support.design.widget.AppBarLayout>
  <android.support.v4.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="fill_vertical"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="@dimen/linearlayout_fix"
        android:layout_marginTop="23dp"
        >

        <android.support.v7.widget.CardView
            android:orientation="horizontal"
            android:padding="@dimen/spacing_major"
            android:background="@color/white"
            android:id="@+id/candidate_detail_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding_large"
            android:clickable="true"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|right|end"
            android:foreground="?selectableItemBackground"
            app:cardElevation="5dp"
            app:pressedTranslationZ="16dp"
            app:borderWidth="0dp"
            app:elevation="@dimen/fab_elevation"
            app:rippleColor="@color/primary_dark"
            card_view:cardCornerRadius="@dimen/default_padding_small"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/spacing_minor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_card"
                android:weightSum="3"
                >
                <org.mmaug.mae.view.AutofitTextView
                    android:id="@+id/candidate_detail_education"
                    card_view:text="ကော့မှူး"
                    android:gravity="center"
                    android:src="@drawable/flag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_weight="1"
                    />
                <View android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_minor"
                    android:layout_marginBottom="@dimen/spacing_minor"
                    android:background="#AECACE"/>
                <org.mmaug.mae.view.AutofitTextView
                    android:id="@+id/candidate_detail_occupation"
                    android:gravity="center"
                    card_view:text="ဥက္ကဌ"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_weight="1"
                    />
                <View android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_minor"
                    android:layout_marginBottom="@dimen/spacing_minor"
                    android:background="#AECACE"/>
                <org.mmaug.mae.view.AutofitTextView
                    android:id="@+id/candidate_detail_race"
                    card_view:text="WOWOW"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>
                <View android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="@dimen/spacing_minor"
                    android:layout_marginLeft="@dimen/spacing_minor"
                    android:background="#AECACE"/>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_minor"
                    android:weightSum="3">
                <TextView
                   android:text="@string/date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/spacing_minor"/>
                <TextView
                    android:id="@+id/candidate_detail_dob"
                    android:text="WOWOW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/spacing_minor"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_minor"
                    android:weightSum="3">
                    <TextView
                        android:text="@string/religion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/spacing_minor"/>
                    <TextView
                        android:id="@+id/candidate_detail_religion"
                        android:text="WOWOW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_minor"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_minor">
                    <TextView
                        android:text="@string/father_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/spacing_minor"/>
                    <TextView
                        android:id="@+id/candidate_detail_father"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_minor"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_minor"
                    android:weightSum="3">
                    <TextView
                        android:text="@string/mother_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/spacing_minor"/>
                    <TextView
                        android:id="@+id/candidate_detail_mother"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/spacing_minor"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

  </android.support.v4.widget.NestedScrollView>
  <android.support.v7.widget.CardView
      android:orientation="horizontal"
      android:padding="@dimen/spacing_major"
      android:background="@color/white"
      android:id="@+id/candidate_card"
      android:layout_width="match_parent"
      android:layout_height="@dimen/home_card"
      android:layout_margin="@dimen/default_padding_large"
      android:clickable="true"
      app:layout_anchor="@id/appbar"
      app:layout_anchorGravity="bottom|right|end"
      android:foreground="?selectableItemBackground"
      app:cardElevation="5dp"
      app:pressedTranslationZ="16dp"
      app:borderWidth="0dp"
      app:elevation="@dimen/fab_elevation"
      app:rippleColor="@color/primary_dark"
      card_view:cardCornerRadius="@dimen/default_padding_small"
      app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
      >
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/spacing_minor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_card"
        android:weightSum="3"
        >
      <org.mmaug.mae.view.AutofitTextView
          android:id="@+id/candidate_detail_constituency_pl"
          card_view:text="ကော့မှူး"
          android:gravity="center"
          android:src="@drawable/flag"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:lines="1"
          android:maxLines="1"
          android:layout_weight="1"
          />
        <View android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_minor"
            android:layout_marginBottom="@dimen/spacing_minor"
            android:background="#AECACE"/>
      <org.mmaug.mae.view.AutofitTextView
          android:id="@+id/legalslature"
          android:gravity="center"
          card_view:text="ပြည်သူ့လွျတ်တော်"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:lines="1"
          android:maxLines="1"
          android:layout_weight="1"
          />
        <View android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_minor"
            android:layout_marginBottom="@dimen/spacing_minor"
            android:background="#AECACE"/>
      <ImageView
          android:id="@+id/candidate_detail_party_flag"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:gravity="center"
          android:layout_weight="1"
          card_view:src="@mipmap/ic_launcher"
          />
    </LinearLayout>
  </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>