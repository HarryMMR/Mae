<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/spacing_minor"
    android:layout_marginLeft="@dimen/spacing_minor"
    android:layout_marginTop="@dimen/spacing_micro"
    android:layout_marginBottom="@dimen/spacing_micro"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <FrameLayout
        android:id="@+id/image_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        >

      <org.mmaug.mae.view.AspectRatioImageView
          android:id="@+id/party_image"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scaleType="centerCrop"
          />
    </FrameLayout>

    <TextView
        android:padding="10dp"
        android:layout_below="@+id/image_frame"
        android:id="@+id/mPartyNameMyanmar"
        android:gravity="center"
        android:text="Pary Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
  </RelativeLayout>
</android.support.v7.widget.CardView>